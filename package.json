{
  "name": "mern-ecommerce",
  "version": "1.0.0",
  "description": "A fullstack application, that utilizes nodejs, express, mongoDb, mongoose, jwt, paystack & stripe for payment, and reactjs for the client side application",
  "main": "server.js",
  "scripts": {
    "start": "nodemon server.js",
    "client": "cd client && npm start",
    "dev": "concurrently -n 'server,client' -c 'red,green' \"nodemon server.js\" \"npm run client\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongoDb",
    "mongoose",
    "jwt",
    "paystack",
    "stripe",
    "for",
    "payment",
    "and",
    "reactjs"
  ],
  "author": "Adegbokan Paul",
  "license": "ISC",
